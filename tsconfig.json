{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "jsxFactory": "Taro.createElement",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/channel/*": ["./src/channel/channel1/*", "./src/channel/channel2/*", "./src/channel/channel3/*"],
      "@/assets/*": ["./src/channel/channel1/assets/*", "./src/channel/channel2/assets/*", "./src/channel/channel3/assets/*"],
      "@/theme/*": ["./src/theme/theme1/*", "./src/theme/theme2/*"],
      "@/diff/*": ["./src/config/diff/*"],
      "@/app_style": ["./src/app.less"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
